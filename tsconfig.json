{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "include": [
    "packages/*/src/**/*",
    "examples/**/*",
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/node_modules"
  ]
} 